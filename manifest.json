{
  "manifest_version": 3,
  "name": "商品名取得拡張",
  "version": "1.0",
  "permissions": [
  "scripting",
  "activeTab"
  ],
  "host_permissions": [
    "https://shop.asobistore.jp/*",
    "http://shop.asobistore.jp/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://shop.asobistore.jp/mypage/orderhistory*"],
      "js": ["content_script.js"]
    }
  ]
}

